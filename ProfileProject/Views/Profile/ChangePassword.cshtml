@model DataModels.ChangePasswordModel

@{
    ViewBag.Title = "Profile Project";
    ViewBag.BreadcrumbItemActive = $"Şifre Değiştir";
}
@Html.Partial("~/Views/Shared/_breadcrumb.cshtml")

<div class="container">
    <div class="card">
        <div class="card-body">
            <form id="changePasswordForm" asp-controller="Profile" asp-action="ChangePassword" method="post">
                <div class="row">
                <!-- Eski Parola -->
                <div class=" col-lg-4 mb-3">
                    <label asp-for="OldPassword" class="form-label"></label>
                    <input asp-for="OldPassword" class="form-control" type="password" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <!-- Yeni Parola -->
                <div class="col-lg-4 mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Yeni Parola (Tekrar) -->
                <div class="col-lg-4 mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                </div>
                <div class="col-lg-12" style="text-align: center; align-content:center; margin-top:20px;">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
