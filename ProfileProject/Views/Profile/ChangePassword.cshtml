@model DataModels.ChangePasswordModel

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<h2>@ViewData["Title"]</h2>

<form id="changePasswordForm" asp-controller="Profile" asp-action="ChangePassword" method="post">
    <!-- Eski Parola -->
    <div class="mb-3">
        <label asp-for="OldPassword" class="form-label"></label>
        <input asp-for="OldPassword" class="form-control" type="password" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>

    <!-- Yeni Parola -->
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- Yeni Parola (Tekrar) -->
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="d-grid mt-4">
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
