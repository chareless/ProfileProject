@model List<User>

@inject IHttpContextAccessor HttpContextAccessor

@{
    var session = HttpContextAccessor.HttpContext.Session;

    var id = session?.GetInt32("UserId");

    ViewBag.Title = "Profile Project";
    ViewBag.BreadcrumbItemActive = "Arama Sonuçları";
    var data = ViewBag.Text;
}
@Html.Partial("~/Views/Shared/_breadcrumb.cshtml")
 
<div>
    <div class="text-center">
        <h3>Arama Sonuçları: "@data"</h3>
    </div>
    <div class="col-lg-12">
        @if(Model != null && Model?.Count > 0)
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 text-center mb-4">
                        <div class="card p-3">
                            <!-- Resim tıklanabilir -->
                            <div class="mb-2">
                                @if (item.Id == id)
                                {
                                    <a asp-action="Index" asp-controller="Profile" target="_blank">
                                        <img src="@(string.IsNullOrEmpty(item.Picture) ? "/assets/images/no-photo.png" : item.Picture)"
                                             alt="User Picture"
                                             width="150px"
                                             height="150px"
                                             class="rounded-circle mx-auto d-block"
                                             style="object-fit: cover; cursor: pointer;" />
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="User" asp-controller="Profile" asp-route-id="@item.Username" target="_blank">
                                        <img src="@(string.IsNullOrEmpty(item.Picture) ? "/assets/images/no-photo.png" : item.Picture)"
                                             alt="User Picture"
                                             width="150px"
                                             height="150px"
                                             class="rounded-circle mx-auto d-block"
                                             style="object-fit: cover; cursor: pointer;" />
                                    </a>
                                }
                            </div>
                            <!-- İsim tıklanabilir -->
                            <div>
                                <h5 class="mb-1">
                                    @if (item.Id == id)
                                    {
                                        <a asp-action="Index" asp-controller="Profile" target="_blank" style="text-decoration: none;">
                                            @item.NameSurname
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="User" asp-controller="Profile" asp-route-id="@item.Username" target="_blank" style="text-decoration: none;">
                                            @item.NameSurname
                                        </a>
                                    }
                                </h5>
                                <p class="text-muted">@item.Job</p>
                            </div>
                        </div>
                    </div>
                }
                </div>
       
        }
        else
        {
            <h4>Sonuç Bulunamadı.</h4>
        }
        
    </div>
</div>

@section scripts {
    <!-- [Page Specific JS] start -->
    <script src="/assets/js/plugins/apexcharts.min.js"></script>
    <script src="~/js/utils.js"></script>

    <script src="/assets/js/pages/dashboard-default.js"></script>
}